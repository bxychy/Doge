extends ../layout

block content
	.cotainer
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(hreg='/movie/#{item._id}')
							img(src='#{item.poster}',alt='#{item.title}')
						.caption
							h3 #{item.title}
							p: a.btn.btn-primary(href='/movie/#{item._id}',role='button')
